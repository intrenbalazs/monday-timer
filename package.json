{
    "name": "monday-timer",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "electron .",
        "mac:build": "rm -rf dist/mac && electron-builder --mac --universal --publish never --config.directories.output=dist/mac",
        "win:build": "rm -rf dist/win && electron-builder --win --x64 --publish never --config.directories.output=dist/win",
        "prebuild": "rm -rf dist",
        "build": "npm run mac:build && npm run win:build",
        "test": "node test.js",
        "publish:all": "rm -rf dist && electron-builder --mac --universal --win --x64 --publish always"
    },
    "keywords": [
        "electron",
        "timer",
        "monday"
    ],
    "author": "",
    "license": "ISC",
    "description": "Electron application for Monday Timer",
    "dependencies": {
        "dotenv": "^16.5.0",
        "electron-traywindow-positioner": "^1.2.1",
        "electron-window-state": "^5.0.3"
    },
    "devDependencies": {
        "electron": "^36.2.1",
        "electron-builder": "^26.0.12",
        "nodemon": "^3.1.10"
    },
    "build": {
        "appId": "com.monday.timer",
        "productName": "Monday Timer",
        "mac": {
            "icon": "icons/icon.icns"
        },
        "win": {
            "icon": "icons/favicon.ico"
        },
        "linux": {
            "icon": "icons"
        }
    }
}
